            "application/json": {
              "schema": {
                "type": "object",
                "required": [
                  "uid",
                  "claims"
                ],
                "properties": {
                  "uid": {
                    "type": "string",
                    "description": "Firebase Authentication UID of the user.",
                    "example": "abc123UID"
                  },
                  "claims": {
                    "type": "object",
                    "description": "Custom claims to assign to the user.",
                    "example": {
                      "role": "coach"
                    }
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "User claims updated successfully.",
