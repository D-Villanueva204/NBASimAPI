                "properties": {
                  "homeTeam": {
                    "type": "string",
                    "example": "Lakers"
                  },
                  "awayTeam": {
                    "type": "string",
                    "example": "Celtics"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Game sent to Commissioner for Approval.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ResponseSchema"
