            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "The id of the coach"
          }
        ],
        "responses": {
          "200": {
            "description": "Coach found and returned",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": {
                      "type": "boolean",
                      "example": true
                    },
                    "message": {
                      "type": "string",
                      "example": "Coach found"
                    },
                    "data": {
                      "$ref": "#/components/schemas/Coach"
                    }
                  }
                }
              }
            }
          }
        }
      },
      "put": {
        "summary": "Updates a Coach from Firebase.",
        "tags": [
          "Coaches",
          "Admin"
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
